<div class="card border-primary mb-3">
    <div class="card-header">
        <h2>{{ note.title }}</h2>
        <p class="text-muted my-2">{{ note.createDate|date('d M Y H:i') }}</p>
    </div>
    <div class="card-body">
        <p class="card-text">{{ note.content|nl2br }}</p>
    </div>
    <div class="card-footer">
        <button type="button" class="btn btn-sm btn-primary mr-2">
            <span class="fa fa-fw fa-pencil mr-1" aria-hidden="true"></span>
            Edit
        </button>
        <button type="button" class="btn btn-sm btn-danger">
            <span class="fa fa-fw fa-trash mr-1" aria-hidden="true"></span>
            Delete
        </button>
    </div>
</div>